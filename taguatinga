        function showYear(year) {
            const data = curriculumData[year];
            const tabs = document.querySelectorAll('.year-tab');
            tabs.forEach(tab => {
                tab.classList.remove('tab-active');
                if(tab.innerText.toLowerCase().includes(year.replace('ano', ''))) tab.classList.add('tab-active');
            });

            let html = `
                <div class="mb-6">
                    <h3 class="text-xl font-bold text-school-blue">${data.title}</h3>
                    <p class="text-sm text-gray-500 italic">Foco: ${data.focus}</p>
                </div>
                <table class="w-full text-xs border-collapse">
                    <thead>
                        <tr class="bg-gray-100 text-left">
                            <th class="p-3 border">Bim.</th>
                            <th class="p-3 border">Língua Portuguesa</th>
                            <th class="p-3 border">Matemática</th>
                            <th class="p-3 border">C. Naturais</th>
                            <th class="p-3 border">C. Humanas</th>
                            <th class="p-3 border">Arte e Ed. Física</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${data.rows.map(r => `
                            <tr>
                                <td class="p-3 border font-bold bg-gray-50 text-center">${r.b}</td>
                                <td class="p-3 border">${r.pt}</td>
                                <td class="p-3 border">${r.mat}</td>
                                <td class="p-3 border">${r.cn}</td>
                                <td class="p-3 border">${r.ch}</td>
                                <td class="p-3 border">${r.art}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
            document.getElementById('curriculum-content').innerHTML = html;
        }

        window.onload = () => showYear('1ano');
    </script>
